<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/btnUrunler"
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:layout_marginTop="104dp"
        android:backgroundTint="#D9D9D9"
        android:text="urunler"
        android:textColor="#494948"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/btnAyarlar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFaturalar" />

    <Button
        android:id="@+id/btnAyarlar"
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:layout_marginTop="104dp"
        android:backgroundTint="#D9D9D9"
        android:text="ayarlar"
        android:textColor="#494948"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnUrunler"
        app:layout_constraintTop_toBottomOf="@+id/btnProfil" />

    <Button
        android:id="@+id/btnProfil"
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:layout_marginTop="168dp"
        android:backgroundTint="#D9D9D9"
        android:text="Profil"
        android:textColor="#494948"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnFaturalar"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnFaturalar"
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:layout_marginTop="168dp"
        android:backgroundTint="#D9D9D9"
        android:text="Faturalar"
        android:textColor="#494948"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/btnProfil"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>